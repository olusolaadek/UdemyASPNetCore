@model HotelBooking

<div class="row">
    <div class="col-8">
        <div class="card">
            <div class="card-header">
                <h3>Hotel Booking for - @Model.GuestName</h3>
            </div>
            <div class="card-body">
                <table class="table">
                    <tr>
                        <td>Booking Id</td>
                        <td>@Model.Id</td>
                    </tr>
                    <tr>
                        <td>Date Start</td>
                        <td>@Model.DateStart</td>
                    </tr>
                    <tr>
                        <td>Date End</td>
                        <td>@Model.DateEnd</td>
                    </tr>
                </table>
            </div>
            <div class="card-footer"></div>
        </div>
    </div>
</div>